@model IEnumerable<OpenGate.Entidades.nts>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHD.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2> NTS <small>Index</small></h2> &nbsp;&nbsp;&nbsp;                
                <a class="btn btn-success" href="@Url.Action("Upload")"> <i class="fa fa-plus-circle"></i> Agregar Nuevo Registro</a>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="table" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NTSDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Order)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DSIdCliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DSNombreCliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OSACalleNumero)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OSANull1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OSAColonia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OSADestinatario)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OSACiudad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OSANull2)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OSAEstado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OSACodigoPostal)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OSI)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.osp)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.osh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ofcodigopais)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.oforigen)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.fecharegistro)
                            </th>                           
                        </tr>
                    </thead>


                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.NTSDate.Value.ToShortDateString()
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Order)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DSIdCliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DSNombreCliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OSACalleNumero)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OSANull1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OSAColonia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OSADestinatario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OSACiudad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OSANull2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OSAEstado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OSACodigoPostal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OSI)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.osp)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.osh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ofcodigopais)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.oforigen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fecharegistro)
                            </td>                            
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>


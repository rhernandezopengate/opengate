@model IEnumerable<OpenGate.Entidades.proveedor>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2> Proveedores <small>Index</small></h2> &nbsp;&nbsp;&nbsp;
                <a class="btn btn-success" href="@Url.Action("Create")"> <i class="glyphicon glyphicon-plus-sign"></i> Agregar registro</a>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table class="table table-bordered" id="tbl">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.RazonSocial)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NombreComercial)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RFC)
                            </th>                           
                            <th>
                                @Html.DisplayNameFor(model => model.statusproveedor.descripcion)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RazonSocial)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreComercial)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RFC)
                            </td>                                                    
                            <td>
                                @Html.DisplayFor(modelItem => item.statusproveedor.descripcion)
                            </td>
                            <td>
                                <a href="@Url.Action("EditView", new { id = item.id })" class="btn btn-primary"><i class="fa fa-edit"></i> Editar </a>               
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>


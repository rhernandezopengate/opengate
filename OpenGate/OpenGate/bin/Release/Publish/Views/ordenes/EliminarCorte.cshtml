
@{
    ViewBag.Title = "EliminarCorte";
    Layout = "~/Views/Shared/_LayoutHD.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2> Orden de Asociado <small>Eliminar Corte Completo</small></h2> &nbsp;&nbsp;&nbsp;
                <a class="btn btn-dark" href="@Url.Action("Index")"> <i class="glyphicon glyphicon-arrow-left"></i> Cancelar</a>
                <button id="guardar" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar Corte</button>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="col-sm-3">
                    <div class="form-group">
                        Fecha / Hora de Ultimo Corte
                        <div class="input-group date">
                            <input type="text" id="FechaEliminacion" value="@ViewBag.UltimoCorte" class="form-control" readonly/>
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>                            
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    $("#guardar").click(function () {
        var fechahora = $("#ddlCorte").val();
        $.ajax({
            url: '/ordenes/ConfirmarEliminarCorte/',            
            dataType: "json",
            type: "GET",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                alert(data);
            },
            error: function (response) {
                alert(response.responseText);
            },
            failure: function (response) {
                alert(response.responseText);
            }
        });
    });
</script>
@using OpenGate.Entidades
@model List<kpisplaneacion>

<table id="tbl_resumen" class="table table-bordered" style="cursor:pointer;">
    <thead>
        <tr>
            <th>
                Mes
            </th>
            <th>
                Apli.
            </th>
            <th>
                Ok
            </th>
            <th>
                Desv
            </th>
            <th>
                %
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width:10px">
                    @item.mes
                </td>
                <td style="width:10px">
                    @item.Total
                </td>
                <td>
                    @item.TotalOks
                </td>
                <td>
                    @item.TotalDesv
                </td>
                <td>
                    @item.procentaje%
                </td>
            </tr>
        }   
        
        <tr>
            <td>
                Total
            </td>
            <td>
                @ViewBag.TotalAplicaciones
            </td>
            <td>
                @ViewBag.TotalOk
            </td>
            <td>
                @ViewBag.TotalDesv
            </td>
            <td>
                @ViewBag.PorcentajeOk%
            </td>
        </tr>
    </tbody>
</table>


@model IEnumerable<OpenGate.Entidades.statuspago>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPagoProveedores.cshtml";
}
<link href="~/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/1.5.2/css/buttons.dataTables.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Estado Pagos <small>Index</small></h2>   &nbsp;
                <a class="btn btn-success" href="@Url.Action("Create")"> <i class="fa fa-plus-circle"></i> Agregar registro</a>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                <table id="datatable-buttons" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Descripcion
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.descripcion)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.id })" class="btn btn-primary"><i class="glyphicon glyphicon-edit"></i>Editar</a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>


@model IEnumerable<OpenGate.Entidades.fecuenciadhl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHD.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2> Frecuencia DHL <small>Index</small></h2> &nbsp;&nbsp;&nbsp;
                <a class="btn btn-success" href="@Url.Action("Create")"> <i class="fa fa-plus-circle"></i> Agregar Nuevo Registro</a>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="table" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.carrier)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.postalcode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.freightcode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.frequency)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.wharehouse)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.statusfq)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.descripcion)
                            </th>
                            <th></th>
                        </tr>
                    </thead>                    

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.carrier)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.postalcode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.freightcode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.frequency)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.wharehouse)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.statusfq)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.descripcion)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>


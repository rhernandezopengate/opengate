@model OpenGate.Entidades.complementosfacturas

<div class="modal-header text-center">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span>
    </button>
    <h4 class="modal-title" id="myModalLabel">Editar Complemento de Factura</h4>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)
            @Html.HiddenFor(model => model.Factura_Id)
            @Html.HiddenFor(model => model.Asigancion_Id)


            <div class="form-horizontal form-label-left">
                <div class="form-group">
                    <label class="control-label col-md-3" for="first-name">
                        Banco
                    </label>
                    <div class="col-md-7">
                        @Html.DropDownList("Bancos_Id", null, htmlAttributes: new { @class = "form-control col-md-7 col-xs-12" })
                        @Html.ValidationMessageFor(model => model.Bancos_Id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3" for="last-name">
                        Cuenta Ordenante
                    </label>
                    <div class="col-md-7">
                        @Html.DropDownList("CuentaOrdenante_Id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CuentaOrdenante_Id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3" for="last-name">
                        Autorizacion
                    </label>
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Autorizacion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Autorizacion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3" for="last-name">
                        Estado Complemento
                    </label>
                    <div class="col-md-7">
                        @Html.DropDownList("StatusComplemento_Id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.StatusComplemento_Id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div> 
        </div>
    </div>


    <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal">Cancel</button>
        <input type="submit" class="btn btn-primary" value="Guardar" id="btnSubmit" />
    </div>
}

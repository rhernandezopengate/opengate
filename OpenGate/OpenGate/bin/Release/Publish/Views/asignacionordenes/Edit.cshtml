@model OpenGate.Entidades.asignacionordenes

@{
    /**/
    ViewBag.Title = "Index";
    Layout = null;
}

<div class="modal-header text-center">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span>
    </button>
    <h4 class="modal-title" id="myModalLabel">Editar Asignacion @Model.concentrado.guiasimpresas.numero</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="form-horizontal form-label-left input_mask">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                @Html.DropDownList("StatusAsignacion_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StatusAsignacion_Id, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                @Html.TextArea("Comentarios", null, new { @class = "form-control" })
                @*<input type="text" class="form-control" value="@Model.Comentarios" id="Comentarios" name="Comentarios" />*@
            </div>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>    
}
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        
        <ul class="nav navbar-nav navbar-right">
            <li class="">
                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    
                    <img src="@Url.Action("Imagen", "empleados")" alt="...">            
                    Bienvenido!
                    <span class=" fa fa-angle-down"></span>
                </a>
                
                <ul class="dropdown-menu dropdown-usermenu pull-right">
                    <li>
                        
                        @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                    </li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión <i class="fa fa-sign-out pull-right"></i></a></li>
                    
                </ul>
            </li>            
            
            <li>
                <a> @DateTime.Now.ToLongDateString() </a> 
            </li>
        </ul>
    }
}
else
{
        <ul class="nav navbar-nav navbar-right">            
            <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
            <li><a> @DateTime.Now.ToLongDateString() </a></li>
        </ul>
}

<script src="../build/js/custom.min.js"></script>

<script type="text/javascript">

    function DateFormat(data) {
        var data1 = data.replace("/Date(", "").replace(")/", "");
        var date = new Date(parseInt(data1));
        var month = date.getMonth() + 1;
        return date.getDate() + "/" + (month.toString().length > 1 ? month : "0" + month) + "/" + date.getFullYear();
    }

    $(document).ready(function () {

        table = $('#tblKpis').DataTable({
            "order": [[0, "desc"]],
            "ordering": true,
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
            "pagingType": "simple_numbers",
            "dom": 'Blrtip', // Hides Default Search
            "responsive": true,
            "processing": true,
            "serverSide": true,
            "orderMulti": false,
            "deferRender": true,
            rowId: 'id',
            select: true,
            "ajax": {
                "url": "/kpisrecibo/ListaKpis",
                "type": "POST",
                "datatype": "json"
            },
            buttons: [

                {
                    extend: 'copyHtml5',
                    text: '<i class="fa fa-files-o"></i>',
                    titleAttr: 'COPIAR',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'print',
                    text: '<i class="fa fa-print"></i>',
                    titleAttr: 'IMPRIMIR',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'excel',
                    text: '<i class="fa fa-file-excel-o"></i>',
                    titleAttr: 'EXCEL',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'pdf',
                    text: '<i class="fa fa-file-pdf-o"></i>',
                    titleAttr: 'PDF',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    }
                }
            ],
            "aoColumns": [
                //0
                { "data": "id", "autoWidth": true, "visible": false },
                { "data": "mes", "autoWidth": true },
                { "data": "wk", "autoWidth": true },
                {
                    "data": "fecha",
                    "name": "fecha",
                    "render": function (data, type, full) {

                        var data1 = data.replace("/Date(", "").replace(")/", "");
                        var date = new Date(parseInt(data1));
                        var month = date.getMonth() + 1;
                        return date.getDate() + "-" + (month.toString().length > 1 ? month : "0" + month) + "-" + date.getFullYear();
                    },
                    "autoWidth": true
                },
                { "data": "proveedor", "autoWidth": true },
                { "data": "ordenguia", "autoWidth": true },
                { "data": "descarga", "autoWidth": true },
                { "data": "fechahoradescargastring", "autoWidth": true },
                { "data": "fechahoraingresosistemastring", "autoWidth": true },
                { "data": "tiempoaplicacionoracle", "autoWidth": true },
                { "data": "evaluacioningreso", "autoWidth": true }
            ]
        });

        $('#mes').on('change', function () {
            table.columns(3).search(this.value).draw();
        });

        $('#wk').on('keyup', function () {
            table.columns(2).search(this.value).draw();
        });

        $('#orden').on('keyup', function () {
            table.columns(5).search(this.value).draw();
        });
    });

</script>
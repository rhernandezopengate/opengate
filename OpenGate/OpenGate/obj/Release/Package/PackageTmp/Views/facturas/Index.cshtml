<script type="text/javascript">

    var Edit = function (ID) {
        $.ajaxSetup({ cache: false });
        var EditUrl = "/facturas/Edit/" + ID;
        $("#MyModalContent").load(EditUrl, function () {
            $("#MyModal").modal({
                //backdrop: 'static',
                keyboard: false
            }, 'show');
            bindForm(this);
        });
        return false;
    }

    function DateFormat(data) {
        var data1 = data.replace("/Date(", "").replace(")/", "");
        var date = new Date(parseInt(data1));
        var month = date.getMonth() + 1;
        return date.getDate() + "/" + (month.toString().length > 1 ? month : "0" + month) + "/" + date.getFullYear();
    }

    var Details = function (ID) {
        var Msg = "";
        $.ajax({
            url: "/facturas/Details/",
            type: "GET",
            data: { id: ID },
            success: function (result) {

                detailsMessage = "<div class='col-sm-12 invoice-col'>";
                detailsMessage += "<address> Proveedor: <strong>" + result[0].razon + "</strong>";
                detailsMessage += "</address>";
                detailsMessage += "</div>";  

                detailsMessage += "<div class='col-sm-6 invoice-col'>";                
                detailsMessage += "<address> Estado: <strong>" + result[0].estado + "</strong>";
                detailsMessage += "<br> Fecha Factura: <strong>" + DateFormat(result[0].FechaFactura) + "</strong>";                
                detailsMessage += "</address>";
                detailsMessage += "</div>";  

                detailsMessage += "<div class='col-sm-6 invoice-col'>";
                detailsMessage += "<address> Fecha Sello: <strong>" + DateFormat(result[0].FechaSello) + "</strong>";               
                detailsMessage += "<br> Fecha Vencimiento: <strong>" + DateFormat(result[0].FechaVencimiento) + "</strong>";                
                detailsMessage += "</address>";
                detailsMessage += "</div>";  

                detailsMessage += "<table class='table jambo_table'>";
                detailsMessage += "<thead><tr><td>Concepto</td> <td>Subtotal</td> <td>Descuento</td> <td>Retencion</td> <td>Iva</td> <td>Total</td> </tr></thead>";
                detailsMessage += "<tbody><tr><td>" + result[0].Concepto + "</td><td>" + result[0].Subtotal +"</td><td>" + result[0].Descuento + "</td> <td>" + result[0].Retencion + "</td> <td>" + result[0].Iva + "</td> <td>" + result[0].Total + "</td></tr></tbody>";        
                detailsMessage += "</table>";                

                detailsMessage += "<table class='table jambo_table'>";                
                detailsMessage += "<thead><tr><th>Observaciones</th></tr></thead>"
                detailsMessage += "<tbody><tr><td>" + result[0].Observaciones + "</td></tr></tbody>"
                detailsMessage += "</table>";
                                                  
                bootbox.confirm({
                    title: "<div class='text-center'>Pago de factura: <i class='fa fa-globe'></i> " + result[0].Numero + "</div>",
                    message: detailsMessage,
                    buttons: {
                        confirm: {
                            label: "<i class='fa fa-credit-card-alt'></i> Pagar Factura",
                            className: 'btn-success'
                        },
                        cancel: {
                            label: "<i class='fa fa-times-circle'></i> Cerrar",
                            className: 'btn-danger'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            deleteConfirmed(ID);
                        }
                    }
                });
            },
            error: function (error) {
                console.log(error);
                alert(error)
            }
        });
    }

    var deleteConfirmed = function (ID) {
        $.ajax({
            url: "/facturas/PagarFactura",
            type: "POST",
            data: { id: ID },
            success: function (result) {          

                if (result === "Error") {
                    toastr.error('Esta factura ya esta pagada');
                }
                else {
                    toastr.success('Pago Exitoso.');
                }

                table.draw();                        
            },
            error: function (error) {
                console.log(error);
                alert(error)
            }
        });
        
    }

    $(function () {
        var ddlCustomers = $("#ddlStatusFactura");
        ddlCustomers.empty().append('<option selected="selected" value="0" disabled = "disabled">Loading ...</option>');
        $.ajax({
            type: "POST",
            url: "/facturas/ListaStatus",
            data: '{}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                ddlCustomers.empty().append('<option selected="selected" value="0">Seleccione una opcion...</option>');
                $.each(response, function () {
                    ddlCustomers.append($("<option></option>").val(this['Value']).html(this['Text']));
                });
            },
            failure: function (response) {
                alert(response.responseText);
            },
            error: function (response) {
                alert(response.responseText);
            }
        });
    });

    $(document).ready(function () {
        table = $('#tblFacturas').DataTable({
            "order": [[0, "desc"]],
            "ordering": true,
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
            "pagingType": "simple_numbers",
            "dom": 'Blrtip', // Hides Default Search
            "processing": true,
            "serverSide": true,
            "orderMulti": false,
            "deferRender": true,
            rowId: 'id',
            select: true,
            "ajax": {
                "url": "/facturas/getFacturas",
                "type": "POST",
                "datatype": "json"
            },
            buttons: [

                {
                    extend: 'copyHtml5',
                    text: '<i class="fa fa-files-o"></i>',
                    titleAttr: 'COPIAR',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'print',
                    text: '<i class="fa fa-print"></i>',
                    titleAttr: 'IMPRIMIR',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'excel',
                    text: '<i class="fa fa-file-excel-o"></i>',
                    titleAttr: 'EXCEL',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'pdf',
                    text: '<i class="fa fa-file-pdf-o"></i>',
                    titleAttr: 'PDF',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    }
                }

            ],
            "aoColumns": [
                //0
                { "data": "id", "autoWidth": true, "visible": false },
                //1
                { "data": "dv", "autoWidth": true },
                ////2
                {
                    "data": "FechaFactura",
                    "name": "FechaFactura",
                    "render": function (data, type, full) {

                        var data1 = data.replace("/Date(", "").replace(")/", "");
                        var date = new Date(parseInt(data1));
                        var month = date.getMonth() + 1;
                        return date.getDate() + "-" + (month.toString().length > 1 ? month : "0" + month) + "-" + date.getFullYear();
                    },
                    "autoWidth": true
                },
                //3
                {
                    "data": "FechaFacturaFin",
                    "name": "FechaFacturaFin",
                    "visible": false,
                    "render": function (data, type, full) {

                        var data1 = data.replace("/Date(", "").replace(")/", "");
                        var date = new Date(parseInt(data1));
                        var month = date.getMonth() + 1;
                        return date.getDate() + "-" + (month.toString().length > 1 ? month : "0" + month) + "-" + date.getFullYear();
                    },

                    "autoWidth": true
                },
                //4
                {
                    "data": "FechaVencimiento",
                    "name": "FechaVencimiento",
                    "render": function (data, type, full) {

                        var data1 = data.replace("/Date(", "").replace(")/", "");
                        var date = new Date(parseInt(data1));
                        var month = date.getMonth() + 1;
                        return date.getDate() + "-" + (month.toString().length > 1 ? month : "0" + month) + "-" + date.getFullYear();
                    },
                    "autoWidth": true
                },
                //5
                {
                    "data": "FechaVencimientoFin",
                    "name": "FechaVencimientoFin",
                    "visible": false,
                    "render": function (data, type, full) {

                        var data1 = data.replace("/Date(", "").replace(")/", "");
                        var date = new Date(parseInt(data1));
                        var month = date.getMonth() + 1;
                        return date.getDate() + "-" + (month.toString().length > 1 ? month : "0" + month) + "-" + date.getFullYear();
                    },
                    "autoWidth": true
                },
                //6
                { "data": "Numero", "autoWidth": true },
                //7
                { "data": "RazonSocial", "autoWidth": true },
                //8
                {
                    "data": "FechaPagoString",
                    "name": "FechaPagoString",
                    "autoWidth": true
                },
                //9
                {
                    "data": "FechaPagoFinString",
                    "name": "FechaPagoFinString",
                    "visible": false,
                    "autoWidth": true
                },
                //10
                { "data": "Concepto", "autoWidth": true },
                //11
                { "data": "TotalString", "autoWidth": true },
                //12
                { "data": "Observaciones", "autoWidth": true },
                //13
                { "data": "Estado", "autoWidth": true },
                {
                    "data": null,
                    "targets": -1,
                    "render": function (data, type, full) {
                        return "<a  onclick='Edit(" + full['id'] + ")' id='btnEdit" + full['id'] + "' class='btn btn-success'><i class='glyphicon glyphicon-pencil'></i></a>" +
                            " <button onclick='Details(" + full['id'] + ")' class='btn btn-info '><i class='fa fa-credit-card-alt'></i></button>";
                    },
                    "bSearchable": false,
                    "sortable": false,
                    "autoWidth": true,
                    "sWidth": "100px"
                }
            ]
        });

        $('#ddlStatusFactura').on('change', function () {
            table.columns(13).search(this.value).draw();
        });

        $('#datepicker_from').on('change', function () {
            table.columns(2).search(this.value).draw();
        });

        $('#datepicker_to').on('change', function () {
            table.columns(3).search(this.value).draw();
        });

        $('#fechaVInicio').on('change', function () {
            table.columns(4).search(this.value).draw();
        });

        $('#fechaVFin').on('change', function () {
            table.columns(5).search(this.value).draw();
        });

        $('#numeroFactura').on('keyup', function () {
            table.columns(6).search(this.value).draw();
        });

        $('#txtProveedorIndex').on('change', function () {
            table.columns(7).search(this.value).draw();
        });

        $("#txtProveedorIndex").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: '/proveedors/AutoComplete/',
                    data: "{ 'prefix': '" + request.term + "'}",
                    dataType: "json",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        response($.map(data, function (item) {
                            return item;
                        }))
                    },
                    error: function (response) {
                        alert(response.responseText);
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    }
                });
            },

            select: function (e, i) {
                $("#hfCustomer").val(i.item.val);
                table.columns(7).search(i.item.val).draw();
            },
            minLength: 0
        }).focus(function () {
            $(this).autocomplete("search");
        });

        $('#fechaPInicio').on('change', function () {
            table.columns(8).search(this.value).draw();
        });

        $('#fechaPFin').on('change', function () {
            table.columns(9).search(this.value).draw();
        });

        $('#Concepto').on('keyup', function () {
            table.columns(10).search(this.value).draw();
        });

        $('#Observaciones').on('keyup', function () {
            table.columns(12).search(this.value).draw();
        });
    });
</script>
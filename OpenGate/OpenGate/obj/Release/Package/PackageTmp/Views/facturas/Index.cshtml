@model IEnumerable<OpenGate.Entidades.factura>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPagoProveedores.cshtml";
}

<div id="MyModal" class="modal fade in">
    <div class="modal-dialog modal-lg" id="mdialTamanio">
        <div class="modal-content">
            <div id="MyModalContent"></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Facturas <small>Index</small></h2> &nbsp;&nbsp;&nbsp;
                <a class="btn btn-success" href="@Url.Action("create")"> <i class="fa fa-plus-circle"></i> Agregar registro</a>
                <button class="btn btn-warning" onclick="limpiar()"><i class="fa fa-trash-o"></i> Quitar Filtros</button>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="well" style="overflow: auto">
                    <div class="col-sm-3">
                        Fecha Factura Inicio
                        <div class="form-group">
                            <div class="input-group date">
                                <input id="datepicker_from" name="datepicker_from" class="form-control" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        Fecha Factura Fin
                        <div class="form-group">
                            <div class="input-group date">
                                <input type="text" id="datepicker_to" name="datepicker_to" class="form-control" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        Fecha Vencimiento Inicio
                        <div class="form-group">
                            <div class="input-group date">
                                <input type="text" id="fechaVInicio" name="fechaVInicio" class="form-control" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        Fecha Vencimiento Fin
                        <div class="form-group">
                            <div class="input-group date">
                                <input type="text" id="fechaVFin" name="fechaVFin" class="form-control" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        Fecha Pago Inicio
                        <div class="form-group">
                            <div class="input-group date">
                                <input type="text" id="fechaPInicio" name="fechaPInicio" class="form-control" autocomplete="off"/>
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        Fecha Pago Fin
                        <div class="form-group">
                            <div class="input-group date">
                                <input type="text" id="fechaPFin" name="fechaPFin" class="form-control" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        Numero Factura
                        <div class="form-group">
                            <div class="input-group date">
                                <input type="text" id="numeroFactura" name="numeroFactura" class="form-control" />
                                <span class="input-group-addon">
                                    <span class="fa fa-qrcode"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            Estado Factura
                            <div class="input-group date">
                                <select class="form-control" id="ddlStatusFactura"></select>
                                <span class="input-group-addon">
                                    <span class="fa fa-flag"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            Proveedor
                            <div class="input-group date">
                                <input type="hidden" id="hfCustomer" name="Proveedor_Id" />
                                <input type="text" id="txtProveedorIndex" name="txtProveedorIndex" class="form-control" />
                                <span class="input-group-addon">
                                    <span class="fa fa-users"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            Concepto
                            <div class="input-group date">
                                <input type="text" id="Concepto" name="Concepto" class="form-control" />
                                <span class="input-group-addon">
                                    <span class="fa fa-list"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            Observaciones
                            <div class="input-group date">
                                <input type="text" id="Observaciones" name="Observaciones" class="form-control" />
                                <span class="input-group-addon">
                                    <span class="fa fa-comments-o"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <table id="tblFacturas" class="table table-bordered jambo_table" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                id
                            </th>
                            <th>
                                DV
                            </th>
                            <th class="column-title">
                                Fecha Factura
                            </th>
                            <th>
                                FechaFacturaFin
                            </th>

                            <th>
                                Fecha Vencimiento
                            </th>
                            <th>
                                FechaVencimientoFin
                            </th>
                            <th>
                                Numero
                            </th>
                            <th>
                                Proveedor
                            </th>
                            <th>
                                Fecha Pago
                            </th>
                            <th>
                                FechaPagoFinString
                            </th>
                            <th>
                                Concepto
                            </th>

                            <th>
                                Total
                            </th>
                            <th>
                                Observaciones
                            </th>
                            <th>
                                Estado
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


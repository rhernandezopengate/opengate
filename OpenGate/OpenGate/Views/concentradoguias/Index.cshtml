<script>
    $(document).ready(function () {
        table = $('#table').DataTable({
            "dom": 'Blrtip', // Hides Default Search
            "processing": true,
            "select": true,
            "serverSide": true,
            "orderMulti": false,
            "deferRender": true,            
            "processing": true,
            "order": [[0, "desc"]],
            "ordering": true,
            "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
            buttons: [
                {
                    extend: 'copyHtml5',
                    text: '<i class="fa fa-files-o"></i>',
                    titleAttr: 'COPIAR',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'print',
                    text: '<i class="fa fa-print"></i>',
                    titleAttr: 'IMPRIMIR',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'excel',
                    text: '<i class="fa fa-file-excel-o"></i>',
                    titleAttr: 'EXCEL',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'pdf',
                    text: '<i class="fa fa-file-pdf-o"></i>',
                    titleAttr: 'PDF',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    }
                }
            ],
            "ajax": {
                "url": "/concentradoguias/ObtenerConcentrado",
                "type": "POST",
                "datatype": "json"
            },
            "aoColumns": [
                { "data": "IdGuia", "autoWidth": true, "visible": false }, 
                { "data": "ReferenciaCSR", "autoWidth": true }, 
                { "data": "NTS", "autoWidth": true },                 
                {
                    "data": "NTSDate",
                    "name": "NTSDate",
                    "render": function (data, type, full) {

                        var data1 = data.replace("/Date(", "").replace(")/", "");
                        var date = new Date(parseInt(data1));
                        var month = date.getMonth() + 1;
                        return date.getDate() + "-" + (month.toString().length > 1 ? month : "0" + month) + "-" + date.getFullYear();
                    },
                    "autoWidth": true
                },
                { "data": "Guia", "autoWidth": true },                 
                { "data": "Concatenado", "autoWidth": true }, 
                { "data": "ChekPoint", "autoWidth": true }, 
            ]
        });

        $('#guia').on('keyup', function () {
            table.columns(0).search(this.value).draw();
        });      
    });

    function CargarNTS() {

        var $modal = $("#processing-modal");

        $modal.modal('show');

        setTimeout(function () {
            $.ajax({
                url: "/concentradoguias/CargarNTS/",
                type: "GET",
                //data: { id: ID },
                success: function (result) {
                    if (result === "Success") {
                        location.reload();
                    }
                    else {
                        toastr.error('Ha ocurrido un error.');
                    }
                },
                error: function (error) {
                    console.log(error);
                    alert(error)
                }
            });

        }, 1800);        
    }

    var Details = function (ID) {
        $.ajaxSetup({ cache: false });
        var EditUrl = "/nts/Details/" + ID;
        $("#MyModalContent").load(EditUrl, function () {
            $("#MyModal").modal({
                //backdrop: 'static',
                keyboard: false
            }, 'show');            
        });
        return false;
    }
</script>


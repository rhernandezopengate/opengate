@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHD.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Concetrado <small>Index</small></h2> &nbsp;&nbsp;&nbsp;
                <a class="btn btn-primary" onclick="CargarNTS()"> <i class="fa fa-refresh"></i> Actualizar Concentrado</a>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="well" style="overflow: auto">
                    <div class="col-sm-3">
                        Guia
                        <div class="form-group">
                            <div class="input-group date">
                                <input id="guia" name="guia" class="form-control" />
                                <span class="input-group-addon">
                                    <span class="fa fa-globe"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <table id="table" class="table table-bordered jambo_table" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Guia Id</th>
                            <th>Referencia CSR</th>
                            <th>NTS</th>
                            <th>NTS Date</th>
                            <th>Guia</th>
                            <th>Informacion de Contacto</th>

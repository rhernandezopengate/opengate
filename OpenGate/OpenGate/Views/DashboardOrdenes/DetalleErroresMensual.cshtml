@{
    Layout = null;
}

<div class="modal-content">
    <div class="modal-header">
        <center>
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Errores De: @ViewBag.Picker </h4>
        </center>
    </div>
    <div class="modal-body">
        <table class="table jambo_table">
            <thead>
                <tr>
                    <th>Error</th>
                    <th>Orden</th>
                    <th>Auditor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Errores)
                {
                    <tr>
                        <td>
                            @item.descripcion
                        </td>
                        <td>
                            @item.OrdenString
                        </td>
                        <td>
                            @item.Auditor
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
</div>

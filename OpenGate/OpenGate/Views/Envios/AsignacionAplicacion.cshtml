    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="text-center">
                    <img src="~/images/loading.gif" class="icon" />
                    <h5><span class="modal-text">Procesando, Espere por favor... </span></h5>
                </div>
            </div>
        </div>
    </div>
</div>
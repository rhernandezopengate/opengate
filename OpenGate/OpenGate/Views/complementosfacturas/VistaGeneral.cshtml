@model IEnumerable<OpenGate.Entidades.complementosfacturas>

@{
    ViewBag.Title = "VistaGeneral";
    Layout = "~/Views/Shared/_LayoutPagoProveedores.cshtml";
}




<h2>VistaGeneral</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="datatable" class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Autorizacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.asigancion.Folio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bancos.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cuentaordenante.descripcion)
            </th>
            <th>
                Factura
            </th>
            <th>
                Proveedor
            </th>
            <th>
                Concepto
            </th>
            <th>
                @Html.DisplayNameFor(model => model.statuscomplemento.descripcion)
            </th>
            <th></th>
        </tr>

    </thead>
    

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Autorizacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.asigancion.Folio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bancos.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cuentaordenante.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.factura.Numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.factura.proveedor.RazonSocial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.factura.Concepto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.statuscomplemento.descripcion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
            @Html.ActionLink("Details", "Details", new { id = item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.id })
        </td>
    </tr>
    }

</table>


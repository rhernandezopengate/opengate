
@{
    ViewBag.Title = "Default";
    Layout = "~/Views/Shared/_LayoutPagoProveedores.cshtml";
}

<!-- page content -->
<div class="">
    <div class="row top_tiles">
        <div class="animated flipInY col-lg-4 col-md-4 col-sm-4 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-usd"></i>
                </div>
                <div class="count green">@ViewBag.Debe</div>
                <h3>Total Por Pagar</h3>
            </div>
        </div>

        <div class="animated flipInY col-lg-4 col-md-4 col-sm-4 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-warning"></i>
                </div>
                <div class="count red">@ViewBag.Vencido</div>
                <h3>Total Vencido</h3>
            </div>
        </div>

        <div class="animated flipInY col-lg-4 col-md-4 col-sm-4 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-info-circle"></i>
                </div>
                <div class="count">@ViewBag.Detenido</div>
                <h3>Total Detenido</h3>
            </div>
        </div>      
    </div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Facturacion Mensual <small>Clientes</small></h2>                        
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="col-md-4 col-sm-12 col-xs-12">
                            <div class="demo-container" style="height:500px">
                                @Html.Action("ReporteFacturacionClientes", "facturas", new { mes = DateTime.Now.Month })                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>  
    </div>
<!-- /page content -->

<!-- Custom Theme Scripts -->
<script src="../build/js/custom.min.js"></script>

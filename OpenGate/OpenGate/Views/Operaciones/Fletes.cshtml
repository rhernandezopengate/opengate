                                <input type="text" class="form-control" placeholder="GPS Movil " tabindex="9">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button>
                                </span>
                            </div>
                        </div>




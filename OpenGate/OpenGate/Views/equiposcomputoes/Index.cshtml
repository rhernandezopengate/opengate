@model IEnumerable<OpenGate.Entidades.equiposcomputo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIT.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2> Equipos de Computo <small>Crear</small></h2> &nbsp;&nbsp;&nbsp;
                <a class="btn btn-success" href="@Url.Action("Create")"> <i class="glyphicon glyphicon-plus-sign"></i> Crear Registro</a>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="table" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Nombre Equipo
                            </th>
                            <th>
                                Service Tag
                            </th>                            
                            <th>
                                @Html.DisplayNameFor(model => model.CPU)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RAM)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HDD)
                            </th>
                            <th>
                                OS
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Modelo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Marca)
                            </th>
                            <th>
                                Tipo Equipo
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ubicacion)
                            </th>
                            <th>
                                Mantenimiento
                            </th>
                            <th>
                                Responsable
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreEquipo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServiceTag)
                            </td>                            
                            <td>
                                @Html.DisplayFor(modelItem => item.CPU)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RAM)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HDD)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SistemaOperativo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Modelo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Marca)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoEquipo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ubicacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.equipomantenimiento.descripcion)
                            </td>
                            <td>
                                @item.empleado.Nombre @item.empleado.ApellidoPaterno
                            </td>
                            <td>
                                <a href="@Url.Action("Details", new { id = item.id })" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                <a href="@Url.Action("Edit", new { id = item.id })" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                <a href="@Url.Action("Delete", new { id = item.id })" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Custom")


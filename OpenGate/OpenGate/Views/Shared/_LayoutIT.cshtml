<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/CssPrimary")
    <link href="~/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <script src="~/vendors/jquery/dist/jquery.min.js"></script>
    <script src="~/vendors/bootstrap/dist/js/bootstrap.min.js"></script>       

    <script src="~/vendors/fastclick/lib/fastclick.js"></script>
    <script src="~/vendors/nprogress/nprogress.js"></script>
    @Scripts.Render("~/iCheck")

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
</head>
<body class="nav-md">
    <div class="container body">
        <!-- /page content -->
        <div class="main_container">
            <!-- left navigation -->
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <br />
                    <div class="navbar nav_title" style="border: 0; height:90px">
                        <a href='@Url.Action("Index", "Home")' class="site_title img-responsive" style="height:auto; width:200px"><img src="~/images/LOGO.jpg" class="img-responsive" /></a>
                    </div>
                    <div class="clearfix"></div>                   
                    <br />
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>General</h3>
                            <ul class="nav side-menu">
                                <li><a href='@Url.Action("Index", "servicios")'><i class="fa fa-crosshairs"></i>Servicios</a></li>
                                <li><a href='@Url.Action("Index", "tareas")'><i class="fa fa-tasks"></i>Tareas</a></li>
                                <li><a href='@Url.Action("Index", "equiposcomputoes")'><i class="fa fa-desktop"></i>Equipos de Computo</a></li>
                                <li><a href='@Url.Action("Index", "equipomantenimientoes")'><i class="fa fa-users"></i>Equipos de Mantenimiento</a></li>
                                <li><a href='@Url.Action("Index", "empleados")'><i class="fa fa-user"></i>Empleados</a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- /sidebar menu -->
                </div>
            </div>
            <!-- /left navigation -->
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        @Html.Partial("_LoginPartial")
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <div class="right_col" role="main">
                @RenderBody()
            </div>
        </div>
        <!-- /page content -->
        <!-- footer content -->
        <footer>
            <div class="pull-right">
                <p>&copy; @DateTime.Now.Year - <a href="http://www.opengatelogistics.com/" target="_blank">OPEN GATE LOGISTICS</a> </p>
            </div>
            <div class="clearfix"></div>
        </footer>
        <!-- /footer content -->
    </div>
</body>
</html>

<script>

    var table = $('#tablecontacto').DataTable();    

    var Edit = function (ID) {
        $.ajaxSetup({ cache: false });
        var EditUrl = "/CarteraProveedores/EditarContactosProveedores/" + ID;
        $("#MyModalContent").load(EditUrl, function () {
            $("#MyModal").modal({
                //backdrop: 'static',
                keyboard: false
            }, 'show');
        });
        return false;
    }

    


    var Create = function () {
        $.ajaxSetup({ cache: false });
        var CreateUrl = "/contactoproveedor/Create/";
        $("#MyModalContent").load(CreateUrl, function () {
            $("#MyModal").modal({
                //backdrop: 'static',
                keyboard: false
            }, 'show');
        });
        return false;
    }

    

    
</script>
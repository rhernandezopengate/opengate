@model IEnumerable<OpenGate.Entidades.contactoproveedor>



<p>
    <a onclick="Create()" class="btn btn-primary">Agregar Nuevo</a>
</p>

<table class="table table-bordered" id="tablecontacto">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puesto)
            </th>
            <th></th>
        </tr>

    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puesto)
            </td>
            <td>
                <button type="button" onclick="Edit(@item.id)" class="btn btn-primary"><i class="fa fa-edit"></i> Editar</button>
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>

        
    }
</table>


<div id="MyModal" class="modal fade in">
    <div class="modal-dialog modal-lg" id="mdialTamanio">
        <div class="modal-content">
            <div id="MyModalContent"></div>
        </div>
    </div>
</div>

